<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add your pokemon</h1>

      <%= simple_form_for @pokemon do |f| %>
        <%= f.input :name %>
        <%= f.input :abilities %>
        <%= f.input :level %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>