
<div class="container">
  <div class="row">
    <div class="col-6">
      <h1><%= @pokemon.name %></h1>
      <p>abilities: <%= @pokemon.abilities %></p>
      <p>level: <%= @pokemon.level %></p>
      <p>price: <%= @pokemon.price %></p>
      <p>image: <% if @pokemon.photo.attached? %>
        <%background_url = cl_image_path @pokemon.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
        <% background_url = "https://source.unsplash.com/300x400/?pokemon" %>
        <% end %>

        </p>
      <p><%= link_to "Go Back to Pokemons' list", pokemons_path %></p>
    </div>
</div>