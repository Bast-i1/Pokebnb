<% if user_signed_in? %>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand"  do %>
    <lottie-player class="logo"src="https://assets4.lottiefiles.com/private_files/lf30_rBOODA.json"  background="transparent"  speed="1"  style="width: 120px; height: 120px;" autoplay loop></lottie-player>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://cdn.glitch.com/c13537fc-8924-4dee-b876-b562eed68eae%2Fondine_un-removebg-preview.png?v=1605820060785" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

          <%= link_to "All Pokemons", pokemons_path, class: "dropdown-item" %>
          <%= link_to "Create a pokemon", new_pokemon_path, class: "dropdown-item" %>
          <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item"%>
        </div>
      </li>
    </ul>
  </div>
</div>

<% else %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand"  do %>
    <lottie-player class="logo"src="https://assets4.lottiefiles.com/private_files/lf30_rBOODA.json"  background="transparent"  speed="1"  style="width: 120px; height: 120px;" autoplay loop></lottie-player>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Login", new_user_session_path, class: "login-btn" %>
      </li>
    </ul>
  </div>
</div>
<% end %>

