<div class="banner-show-user">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
          <h1 class="show-user text-center mb-3">My pokemons</h1>
          <% @pokemons.each do |pokemon| %>
          <%= link_to pokemon_path(pokemon) do %>
            <div class="card mt-1 bg-transparent" style="width: 500px;">
              <div class="card-body my-poke">
                <div class="row">
                  <div class="col-5">
                    <%= cl_image_tag pokemon.photo.key, height: 180, width: 180, crop: :fill %>
                  </div>
                  <div class="col-7">
                    <div class="card-header font-weight-bold"><%=  pokemon.name %></div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item bg-transparent"> <%= pokemon.abilities %></li>
                      <li class="list-group-item bg-transparent"> <%= pokemon.level %></li>
                      <li class="list-group-item bg-transparent"> <%= pokemon.price %></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
      </div>
      <div class="col-md-6">
          <h1 class="show-user text-center mb-3">My bookings</h1>
          <% @bookings.each do |booking| %>
            <%= link_to booking_path(booking) do %>
              <div class="card mt-1" style="width: 500px;">
                <div class="card-body">
                  <div class="row">
                    <div class="col-6">
                      <%= cl_image_tag booking.pokemon.photo.key, height: 160, width: 160, crop: :fill %>
                    </div>
                    <div class="col-6 d-flex align-items-center justify-content-end">
                      <%= link_to booking_path(booking), method: :delete, data: {confirm: "Do you REALY want to delete this review?"} do %>
                        <button type="button" class="icon-close btn btn-secondary" aria-label="Close">Cancel <%= booking.pokemon.name %> booking<span aria-hidden="true"> &times;</span></button>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
